<%= form_with model: @register, local: true do |form| %>
  <div class="field">
    <%= form.label :firstName %>
    <%= form.text_field :firstName %>
  </div>
  <div class="field">
    <%= form.label :lastName %>
    <%= form.text_field :lastName %>
  </div>
  <div class="field">
    <%= form.label :birthDate %>
    <%= form.date_field :birthDate %>
  </div>
  <div class="field">
    <%= form.label :gender %>
    <%= form.text_field :gender %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div class="field">
    <%= form.label :phone %>
    <%= form.telephone_field :phone %>
  </div>
  <div class="field">
    <%= form.label :selectSubject %>
    <%= form.text_field :selectSubject %>
  </div>
  <div class="actions">
    <%= form.submit "Register" %>
  </div>
<% end %>
